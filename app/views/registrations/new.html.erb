<div class="form-signup">
  <h2>Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: 'form-inline', role: 'form') do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label(:username, class: 'sr-only') %>
      <%= f.text_field(:username, class: 'form-control input-lg', placeholder: 'Username') %>
    </div>
    <div class="form-group">
      <%= f.label(:email, class: 'sr-only') %>
      <%= f.email_field(:email, class: 'form-control input-lg', placeholder: 'Your Email') %>
    </div>
    <div class="form-group">
      <%= f.label(:password, class: 'sr-only') %>
      <%= f.password_field(:password, class: 'form-control input-lg', placeholder: 'Password') %>
    </div>
    <div class="form-group">
      <%= f.label(:password_confirmation, class: 'sr-only') %>
      <%= f.password_field(:password_confirmation, class: 'form-control input-lg', placeholder: 'Confrim Password') %>
    </div>
    <%= f.submit("Sign up", class: 'btn btn-primary btn-lg btn-block') %>
  <% end %>
  <br />
  <%= render :partial => "devise/shared/links" %>
</div>